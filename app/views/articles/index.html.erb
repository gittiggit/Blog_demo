<h1>Articles#index</h1>
<p>Find me in app/views/articles/index.html.erb</p>

<%= link_to "Create a new article", new_article_path %>
<table>
	<tr>
		<th>Title</th>
		<th>Description</th>
	</tr>
    <% @articles.each do |ar| %>
		<tr>
		    <td><%= link_to ar.title, ar %></td>
		    <td><%= ar.description %></td>
		    <td><%= link_to "Edit", edit_article_path(ar) %></td>
		    <td><%= link_to "Delete", ar, method: :delete, data:{confirm: "Are you sure"} %></td>
		</tr>
    <% end %>
</table>
<p>
	<%= link_to "List all article", articles_path %>
</p>